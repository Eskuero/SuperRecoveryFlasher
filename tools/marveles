clear
echo ""
echo "                 ##########################################"
echo "                 ##                                      ##"
echo "                 ##        SuperRecovery Flasher         ##"
echo "                 ##              OliverG96               ##"
echo "                 ##                Marvel                ##"
echo "                 ##                                      ##"
echo "                 ##########################################"
echo ""
echo "1 - ClocworkMod 5.0.2.8"
echo "2 - ClocworkMod 6.0.0.3"
echo "3 - ClocworkMod 6.0.0.7"
echo "4 - ClocworkMod 6.0.1.2(Táctil)"
echo "5 - TWRP 2.2.1"
echo "6 - TWRP 2.2.1.4"
echo "7 - TWRP 2.2.1.5"
echo "8 - TWRP 2.2.2.0"
echo ""
echo "0 - Volver a menu principal"
echo ""
echo -n "Elige el recovery que quieres flashear: "
read versiorm
if [ "$versiorm" != "1" ] && [ "$versiorm" != "2" ] && [ "$versiorm" != "3" ] && [ "$versiorm" != "4" ] && [ "$versiorm" != "5" ] && [ "$versiorm" != "6" ] && [ "$versiorm" != "7" ] && [ "$versiorm" != "8" ] && [ "$versiorm" != "0" ]
  then
    ./tools/marveles
  fi

if [ "$versiorm" = "1" ]
  then
    clear
    echo ""
    echo -n "Conecta el teléfono por un cable USB, y luego pulsa enter: "
    read continuar
    echo ""
    echo "Necesitamos permisos de superusuario, puede que se te pida tu contraseña de Ubuntu..."
    echo ""
    sudo ./tools/adb reboot bootloader
    sleep 10s
    echo ""
    echo "Flasheando recovery..."
    echo ""
    sudo ./tools/fastboot flash recovery ./tools/recoveries/cwm5028.img
    echo ""
    echo "Iniciando recovery..."
    sudo ./tools/fastboot reboot
    sudo ./tools/adb wait-for-device
    ./tools/adb reboot recovery
    ./tools/marveles
  fi
